<p id="notice"><%= notice %></p>

<h1>User Roles</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3" class="text-center"> Role</th>
    </tr>
  </thead>

  <tbody>
    <% @user_role_detail.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.roles.pluck(:name).join(',')%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @user_role_detail, theme: 'my_custom_theme' %>

<br>
<% if can? :assign_role, Role %>
<%= link_to 'Assign Role to user', assign_role_roles_path , class: "btn btn-primary"%>
<% end %>