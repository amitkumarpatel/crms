<p id="notice"><%= notice %></p>

<h1>Roles</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3" class="text-center"> Action</th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>
        <td><%= link_to 'Show', role, class: "btn btn-info" %></td>
        <%# if can? :edit, Role %>
        <td><%= link_to 'Edit', edit_role_path(role), class: "btn btn-warning" %></td>
        <%# end%>
        <%# if can? :delete, Role %>
        <td><%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        <%#end%>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @roles, theme: 'my_custom_theme' %>

<br>
<% if can? :new, Role %>
<%= link_to 'New Role', new_role_path , class: "btn btn-primary"%>
<% end %>