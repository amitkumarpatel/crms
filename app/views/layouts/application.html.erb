<!DOCTYPE html>
<html>
  <head>
    <title>Crms</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="<%= root_url %>">
                        Room Management(CRMS)
                    </a>
                </li>
                <li>
                    <a href="<%= bookings_url%>">Bookings</a>
                </li>
                <li>
                    <a href="<%= meeting_rooms_url%>">Meeting Rooms</a>
                </li>
                <li>
                    <a href="<%= facility_items_url%>">Facilities</a>
                </li>
                <li>
                    <a href="<%= leave_managements_url%>">Leave Management</a>
                </li>
                <li>
                    <a href="<%= roles_url%>">Roles</a>
                </li>
                <li>
                    <a href="<%= user_roles_details_roles_url%>">Assign Role to User</a>
                </li>

            </ul>
            <ul class="nav navbar-nav pull-right">
            </ul>
        </div>
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <button type="button" id="sidebarCollapse" class="btn btn-info">
                    <i href="#menu-toggle" class="fas fa-align-left" id="menu-toggle"><span>Toggle Sidebar</span></i>
                </button>
                <ul class="nav navbar-nav pull-right">
                  <% if user_signed_in? %>
                    <li class="dropdown">
                      <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <%= current_user.username.humanize %>
                        <span class="caret"></span>
                      </a>
                      <ul class="dropdown-menu" role="menu">
                        <li><%= link_to 'Profile', edit_user_registration_path %></li>
                        <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
                      </ul>
                    </li>
                  <% else %>
                    <li><%= link_to 'Log In', new_user_session_path %></li>
                    <li><%= link_to 'Sign Up', new_user_registration_path %></li>
                  <% end %>
                </ul>
                <br/>
                <br/>
                <%= flash_messages %>
                <%= yield %>
            </div>
        </div>
    </div>
  </body>
      <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>

</html>
