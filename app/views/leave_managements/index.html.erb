<p id="notice"><%= notice %></p>

<h1>Leave Managements</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Holiday name</th>
      <th>Date</th>
      <th>User</th>
      <th colspan="3" class="text-center">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @leave_managements.each do |leave_management| %>
      <tr>
        <td><%= leave_management.holiday_name %></td>
        <td><%= leave_management.date %></td>
        <td><%= leave_management.user_id %></td>
        <td><%= link_to 'Show', leave_management, class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_leave_management_path(leave_management), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', leave_management, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @leave_managements, theme: 'my_custom_theme' %>

<br>

<%= link_to 'New Leave Management', new_leave_management_path, class: "btn btn-primary" %>
